// For format details, see https://aka.ms/devcontainer.json.
{
	"name": "Engineering AI Agents - Course Container",
	"dockerComposeFile": [
		"../docker-compose.yml"
	],
	"service": "ros.dev.gpu", //"torch.dev.gpu",
	"workspaceFolder": "/workspaces/eng-ai-agents",
	"remoteUser": "vscode",
	"postCreateCommand": "bash -c 'if [ -d \".venv\" ]; then source .venv/bin/activate && echo \"Dev container setup complete! Python available at: $(which python)\" && echo \"UV version: $(uv --version)\"; else echo \"Virtual environment not found. Please run: make start and source your environment\"; fi'",
	"containerEnv": {
		"DISPLAY": "${localEnv:DISPLAY}",
		"PYTHONUNBUFFERED": "True",
		"UV_LINK_MODE": "copy",
		"UV_PROJECT_ENVIRONMENT": "${workspaceFolder}/.venv"
	},
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": false,
			"installOhMyZsh": false,
			"upgradePackages": false,
			"username": "vscode",
			"uid": "1001",
			"gid": "1001"
		},
		"ghcr.io/devcontainers/features/git:1": {
			"version": "latest",
			"ppa": false
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-python.debugpy",
				"ms-toolsai.jupyter",
				"ms-toolsai.vscode-jupyter-powertoys",
				"ExecutableBookProject.myst-highlight",
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"njpwerner.autodocstring",
				"eamodio.gitlens",
				"github.vscode-github-actions",
				"jan-dolejsi.pddl",
				"mechatroner.rainbow-csv",
				"atlassian.atlascode",
				"marimo-team.vscode-marimo",
				"quarto.quarto",
				"streetsidesoftware.code-spell-checker",
				"RooVeterinaryInc.roo-cline",
				"1Password.op-vscode",
				"charliermarsh.ruff",
				"tamasfe.even-better-toml"
			],
			"settings": {
				"python.defaultInterpreterPath": "/workspaces/eng-ai-agents/.venv/bin/python",
				"python.terminal.activateEnvironment": true,
				"python.analysis.extraPaths": [
					"/workspaces/eng-ai-agents"
				],
				"terminal.integrated.profiles.linux": {
					"bash": {
						"path": "/bin/bash"
					}
				},
				"terminal.integrated.defaultProfile.linux": "bash",
				"dev.containers.copyGitConfig": true
			}
		}
	},
	"remoteEnv": {
		"PATH": "/opt/conda/bin:/usr/local/cuda/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
	}
	// "postStartCommand": "echo 'source /usr/share/bash-completion/completions/make' >> ~/.bashrc && eval \"$(ssh-agent -s)\" && ssh-add -l || true"
}